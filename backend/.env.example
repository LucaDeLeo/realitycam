# Database configuration
DATABASE_URL=postgres://realitycam:localdev@localhost:5432/realitycam

# Connection pool settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT_SECS=30
DB_IDLE_TIMEOUT_SECS=600

# S3-compatible storage (LocalStack for development)
S3_ENDPOINT=http://localhost:4566
S3_BUCKET=realitycam-media-dev

# Logging
RUST_LOG=info,sqlx=warn,tower_http=debug
# LOG_FORMAT: "pretty" for human-readable, "json" for structured
LOG_FORMAT=pretty

# Server
HOST=0.0.0.0
PORT=8080

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Graceful shutdown timeout in seconds
SHUTDOWN_TIMEOUT_SECS=30
