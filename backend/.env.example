# Database configuration
DATABASE_URL=postgres://realitycam:localdev@localhost:5432/realitycam

# Connection pool settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT_SECS=30
DB_IDLE_TIMEOUT_SECS=600

# S3-compatible storage (LocalStack for development)
S3_ENDPOINT=http://localhost:4566
S3_BUCKET=realitycam-media-dev
# S3_PUBLIC_ENDPOINT: Optional public-facing S3 URL for generating photo URLs
# In dev, this should be your machine's IP if mobile needs to access photos
# S3_PUBLIC_ENDPOINT=http://192.168.0.90:4566

# Logging
RUST_LOG=info,sqlx=warn,tower_http=debug
# LOG_FORMAT: "pretty" for human-readable, "json" for structured
LOG_FORMAT=pretty

# Server
HOST=0.0.0.0
PORT=8080

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Graceful shutdown timeout in seconds
SHUTDOWN_TIMEOUT_SECS=30

# Verification page base URL (for mobile app deep links)
# In dev, use your machine's IP for physical device testing
VERIFICATION_BASE_URL=http://localhost:3000/verify

# Test endpoints (ONLY for development/testing)
# Set to "true" to enable /api/v1/test/* endpoints
# ENABLE_TEST_ENDPOINTS=true

# Debug logging endpoints (ONLY for development/testing)
# Set to "true" to enable /api/v1/debug/* endpoints
DEBUG_LOGS_ENABLED=true
# Time-to-live for debug logs in days (logs older than this are eligible for cleanup)
DEBUG_LOGS_TTL_DAYS=7
# Maximum number of log entries allowed per batch POST request
DEBUG_LOGS_MAX_BATCH=100
